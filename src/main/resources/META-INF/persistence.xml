<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
  <persistence-unit name="pu">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>epsi.b3.bibliotheque.Livre</class>
    <class>epsi.b3.bibliotheque.Client</class>
    <class>epsi.b3.bibliotheque.Emprunt</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/demo"/>
      <property name="jakarta.persistence.jdbc.user" value="admin"/>
      <property name="jakarta.persistence.jdbc.password" value="admin123"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="banque">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>epsi.b3.banque.Banque</class>
    <class>epsi.b3.banque.Client</class>
    <class>epsi.b3.banque.Compte</class>
    <class>epsi.b3.banque.Operation</class>
    <class>epsi.b3.banque.Adresse</class>
    <class>epsi.b3.banque.LivretA</class>
    <class>epsi.b3.banque.AssuranceVie</class>
    <class>epsi.b3.banque.Virement</class>

    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update"/>

      <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/banque"/>
      <property name="jakarta.persistence.jdbc.user" value="admin"/>
      <property name="jakarta.persistence.jdbc.password" value="admin123"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
